{{> navbar}}

<h1>Your Dashboard</h1>
{{#each userPosts as |post|}}
<article>
    <h2>{{post.title}}</h2>
    <button><a href="/posts/{{post.id}}/edit">Edit</a></button>
    <button><a href="/posts/{{post.id}}/delete">Delete</a></button>
</article>
{{/each}}

<h2>Add New Post</h2>
<form action="/posts" method="POST" class="mt-4">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" placeholder="Post Title" required>
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" name="content" placeholder="Post Content" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

